{% comment %}theme-check-disable RemoteAsset{% endcomment %}
{% assign instagram_data = shop.metafields.custom.instagram_selected_posts.value %}

{% if instagram_data and instagram_data.posts %}
  {% if block.settings.layout == 'carousel' %}
    <div class="instagram-carousel-wrapper" style="padding: {{ block.settings.padding }}px;">
      <button class="carousel-btn carousel-prev" onclick="window.scrollCarousel(-1)">&lt;</button>
      
      <div class="carousel-container">
        <div class="instagram-carousel" style="gap: {{ block.settings.gap }}px;">
        {% for post in instagram_data.posts limit: block.settings.max_posts %}
          <div class="instagram-post carousel-post" style="border-radius: {{ block.settings.border_radius }}px; position: relative;" onclick="openLightbox({{ forloop.index0 }})">
            <img 
              src="{% if post.mediaType == 'VIDEO' and post.thumbnailUrl %}{{ post.thumbnailUrl }}{% else %}{{ post.mediaUrl }}{% endif %}" 
              alt="{{ post.caption | truncate: 100 }}" 
              width="300"
              height="300"
              loading="lazy"
              class="carousel-img"
            >
            {% assign hasVideo = false %}
            {% if post.mediaType == 'VIDEO' %}
              {% assign hasVideo = true %}
            {% elsif post.carouselImages %}
              {% if post.carouselImages contains '"type":"VIDEO"' %}
                {% assign hasVideo = true %}
              {% endif %}
            {% endif %}
            {% if hasVideo %}
              <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); pointer-events: none;">
                <svg xmlns="http://www.w3.org/2000/svg" fill="white" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" style="width: 48px; height: 48px; opacity: 0.9; filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.347a1.125 1.125 0 0 1 0 1.972l-11.54 6.347a1.125 1.125 0 0 1-1.667-.986V5.653Z" />
                </svg>
              </div>
              <div style="position: absolute; bottom: 8px; right: 8px; background: rgba(0,0,0,0.7); color: white; padding: 2px 6px; border-radius: 4px; font-size: 11px; font-weight: 600; pointer-events: none;">VIDEO</div>
            {% endif %}
            {% if post.carouselImages %}
              <div style="position: absolute; top: 8px; right: 8px; pointer-events: none;">
                <svg xmlns="http://www.w3.org/2000/svg" fill="white" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" style="width: 20px; height: 20px; filter: drop-shadow(0 2px 4px rgba(0,0,0,0.5));">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 7.5V6.108c0-1.135.845-2.098 1.976-2.192.373-.03.748-.057 1.123-.08M15.75 18H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08M15.75 18.75v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5A3.375 3.375 0 0 0 6.375 7.5H5.25m11.9-3.664A2.251 2.251 0 0 0 15 2.25h-1.5a2.251 2.251 0 0 0-2.15 1.586m5.8 0c.065.21.1.433.1.664v.75h-6V4.5c0-.231.035-.454.1-.664M6.75 7.5H4.875c-.621 0-1.125.504-1.125 1.125v12c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V16.5a9 9 0 0 0-9-9Z" />
                </svg>
              </div>
            {% endif %}
            {% if block.settings.show_stats %}
              <div class="post-stats" style="color: {{ block.settings.text_color }};">
                <span><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="width:16px;height:16px;display:inline-block;vertical-align:middle;margin-right:4px;"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" /></svg>{{ post.likeCount }}</span>
                <span><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="width:16px;height:16px;display:inline-block;vertical-align:middle;margin-right:4px;"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.76c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.076-4.076a1.526 1.526 0 0 1 1.037-.443 48.282 48.282 0 0 0 5.68-.494c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" /></svg>{{ post.commentsCount }}</span>
              </div>
            {% endif %}
          </div>
        {% endfor %}
        </div>
      </div>
      
      <button class="carousel-btn carousel-next" onclick="window.scrollCarousel(1)">&gt;</button>
    </div>
  {% else %}
    <div class="instagram-feed" style="grid-template-columns: repeat({{ block.settings.columns }}, 1fr); gap: {{ block.settings.gap }}px; padding: {{ block.settings.padding }}px;">
      {% for post in instagram_data.posts limit: block.settings.max_posts %}
        <div class="instagram-post grid-post" style="border-radius: {{ block.settings.border_radius }}px; position: relative;" onclick="openLightbox({{ forloop.index0 }})">
          <img 
            src="{% if post.mediaType == 'VIDEO' and post.thumbnailUrl %}{{ post.thumbnailUrl }}{% else %}{{ post.mediaUrl }}{% endif %}" 
            alt="{{ post.caption | truncate: 100 }}" 
            width="400"
            height="400"
            loading="lazy"
            class="grid-img"
          >
          {% assign hasVideo = false %}
          {% if post.mediaType == 'VIDEO' %}
            {% assign hasVideo = true %}
          {% elsif post.carouselImages %}
            {% if post.carouselImages contains '"type":"VIDEO"' %}
              {% assign hasVideo = true %}
            {% endif %}
          {% endif %}
          {% if hasVideo %}
            <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); pointer-events: none;">
              <svg xmlns="http://www.w3.org/2000/svg" fill="white" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" style="width: 48px; height: 48px; opacity: 0.9; filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.347a1.125 1.125 0 0 1 0 1.972l-11.54 6.347a1.125 1.125 0 0 1-1.667-.986V5.653Z" />
              </svg>
            </div>
            <div style="position: absolute; bottom: 8px; right: 8px; background: rgba(0,0,0,0.7); color: white; padding: 2px 6px; border-radius: 4px; font-size: 11px; font-weight: 600; pointer-events: none;">VIDEO</div>
          {% endif %}
          {% if post.carouselImages %}
            <div style="position: absolute; top: 8px; right: 8px; pointer-events: none;">
              <svg xmlns="http://www.w3.org/2000/svg" fill="white" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" style="width: 20px; height: 20px; filter: drop-shadow(0 2px 4px rgba(0,0,0,0.5));">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 7.5V6.108c0-1.135.845-2.098 1.976-2.192.373-.03.748-.057 1.123-.08M15.75 18H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08M15.75 18.75v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5A3.375 3.375 0 0 0 6.375 7.5H5.25m11.9-3.664A2.251 2.251 0 0 0 15 2.25h-1.5a2.251 2.251 0 0 0-2.15 1.586m5.8 0c.065.21.1.433.1.664v.75h-6V4.5c0-.231.035-.454.1-.664M6.75 7.5H4.875c-.621 0-1.125.504-1.125 1.125v12c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V16.5a9 9 0 0 0-9-9Z" />
              </svg>
            </div>
          {% endif %}
          {% if block.settings.show_stats %}
            <div class="post-stats" style="color: {{ block.settings.text_color }};">
              <span><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="width:16px;height:16px;display:inline-block;vertical-align:middle;margin-right:4px;"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" /></svg>{{ post.likeCount }}</span>
              <span><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="width:16px;height:16px;display:inline-block;vertical-align:middle;margin-right:4px;"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.76c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.076-4.076a1.526 1.526 0 0 1 1.037-.443 48.282 48.282 0 0 0 5.68-.494c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" /></svg>{{ post.commentsCount }}</span>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endif %}

  <div id="instagram-lightbox">
    <button class="lightbox-nav lightbox-nav-prev" onclick="navigatePost(-1)">&lt;</button>
    <button class="lightbox-nav lightbox-nav-next" onclick="navigatePost(1)">&gt;</button>

    <div class="lightbox-content">
      <div class="lightbox-image-container" style="position: relative;">
        <img id="lightbox-image" alt="Instagram post" width="800" height="800" style="display: none;">
        <video id="lightbox-video" controls autoplay style="display: none; width: 100%; height: 100%; object-fit: cover;"></video>
        <button id="carousel-prev" onclick="navigateCarousel(-1)" style="display: none; position: absolute; left: 10px; top: 50%; transform: translateY(-50%); background: rgba(255,255,255,0.9); border: none; border-radius: 50%; width: 32px; height: 32px; cursor: pointer; font-size: 18px; align-items: center; justify-content: center; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">&lt;</button>
        <button id="carousel-next" onclick="navigateCarousel(1)" style="display: none; position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: rgba(255,255,255,0.9); border: none; border-radius: 50%; width: 32px; height: 32px; cursor: pointer; font-size: 18px; align-items: center; justify-content: center; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">&gt;</button>
        <div id="carousel-dots" style="display: none; position: absolute; bottom: 16px; left: 50%; transform: translateX(-50%); gap: 6px;"></div>
      </div>
      
      <div class="lightbox-info">
        <div class="lightbox-header">
          <img src="{{ 'Instagram_Glyph_Gradient.png' | asset_url }}" alt="Instagram" class="instagram-logo" width="24" height="24">
          <span id="lightbox-username" class="lightbox-username"></span>
          <button class="lightbox-close" onclick="closeLightbox()">&times;</button>
        </div>
        <div class="lightbox-body">
          <p id="lightbox-caption" class="lightbox-caption"></p>
          <div id="lightbox-hashtags" class="lightbox-hashtags"></div>
        </div>
        <div class="lightbox-footer">
          <div id="lightbox-stats" class="lightbox-stats"></div>
          <a id="lightbox-link" href="" target="_blank" rel="noopener" class="lightbox-link">
            <img src="{{ 'Instagram_Glyph_Gradient.png' | asset_url }}" alt="Instagram" class="link-icon" width="20" height="20">
            Voir sur Instagram
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.scrollCarousel = function(direction) {
      const carousel = document.querySelector('.instagram-carousel');
      if (!carousel) return;
      const cardWidth = carousel.querySelector('.instagram-post')?.offsetWidth || 300;
      const gap = parseInt(getComputedStyle(carousel).gap) || 0;
      carousel.scrollBy({
        left: direction * (cardWidth + gap),
        behavior: 'smooth'
      });
    };

    (function() {
      if (typeof window.initInstagramLightbox === 'function') {
        window.initInstagramLightbox({{ instagram_data.posts | json }});
      } else {
        document.addEventListener('DOMContentLoaded', function() {
          if (typeof window.initInstagramLightbox === 'function') {
            window.initInstagramLightbox({{ instagram_data.posts | json }});
          }
        });
      }
    })();
  </script>
{% else %}
  <div style="padding: 2rem; text-align: center; color: #666;">
    <p>Aucun post Instagram sélectionné. Configurez vos posts dans l'admin de l'app.</p>
  </div>
{% endif %}

{% schema %}
{
  "name": "Instagram Feed",
  "target": "section",
  "stylesheet": "instagram-lightbox.css",
  "javascript": "instagram-lightbox.js",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Type d'affichage",
      "options": [
        {
          "value": "grid",
          "label": "Grille"
        },
        {
          "value": "carousel",
          "label": "Carrousel"
        }
      ],
      "default": "grid"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Colonnes (Grille uniquement)"
    },
    {
      "type": "range",
      "id": "max_posts",
      "min": 3,
      "max": 50,
      "step": 1,
      "default": 9,
      "label": "Nombre maximum de posts"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 15,
      "label": "Espacement (px)"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 20,
      "label": "Padding (px)"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 8,
      "label": "Arrondi des coins (px)"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "default": true,
      "label": "Afficher les statistiques"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#333333",
      "label": "Couleur du texte"
    }
  ]
}
{% endschema %}

