generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model InstagramConfig {
  id          String   @id @default(cuid())
  shop        String
  accessToken String
  username    String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([shop, username])
  @@index([shop, isActive])
}

model InstagramPost {
  id            String   @id
  shop          String
  username      String
  isTagged      Boolean  @default(false)
  mediaUrl      String
  permalink     String
  caption       String?
  timestamp     DateTime
  mediaType     String
  likeCount     Int      @default(0)
  commentsCount Int      @default(0)
  impressions   Int?
  reach         Int?
  saved         Int?
  hashtags      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  @@index([shop, username])
  @@index([shop, timestamp])
  @@index([shop, likeCount])
  @@index([shop, commentsCount])
  @@index([shop, impressions])
  @@index([shop, reach])
  @@index([shop, saved])
}
